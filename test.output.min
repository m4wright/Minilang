var base: int;
var exp: int;
var ans: int;
var is_odd: int;

print "This program computes base^exp where base and exp are both positive integers\n";
print "Enter the base: ";
read base;
print "Enter the exp: ";
read exp;
if exp then
	ans = 1;
	while (exp - 1) do
		is_odd = (exp - ((exp / 2) * 2));
		if is_odd then
			ans = (base * ans);
			base = (base * base);
			exp = ((exp - 1) / 2);
		else
			base = (base * base);
			exp = (exp / 2);
		endif
	done
	ans = (ans * base);
	print "The answer is: ";
	print ans;
else
	print 1;
endif

